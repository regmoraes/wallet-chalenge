<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:databind="http://schemas.android.com/tools">

    <data>
        <import type="java.math.BigDecimal"/>
        <variable
            name="receipt"
            type="com.wallet.core.receipt.Receipt"/>
    </data>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textView_transaction_type"
            style="@style/WalletTheme.TextViewTransaction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            databind:transactionType="@{receipt.operationType}"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            databind:text="Transaction Type" />

        <TextView
            android:id="@+id/textView_currency_debited"
            style="@style/WalletTheme.TextViewDebit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="@{receipt.debitCurrency.name}"
            app:layout_constraintBottom_toBottomOf="@+id/imageView_debited"
            app:layout_constraintEnd_toStartOf="@+id/textView_debited_amount"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/imageView_debited"
            app:layout_constraintTop_toTopOf="@+id/imageView_debited"
            databind:text="BRL" />

        <TextView
            android:id="@+id/textView_currency_credited"
            style="@style/WalletTheme.TextViewCredit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="@{receipt.creditCurrency.name}"
            app:layout_constraintBottom_toBottomOf="@+id/imageView_credited"
            app:layout_constraintStart_toEndOf="@+id/imageView_credited"
            app:layout_constraintTop_toTopOf="@+id/imageView_credited"
            databind:text="Bitcoin" />

        <TextView
            android:id="@+id/textView_date"
            style="@style/WalletTheme.TextViewTransaction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView_credited"
            databind:instant="@{receipt.date}"
            databind:text="dd/MM/yyyy" />

        <TextView
            android:id="@+id/textView_debited_amount"
            style="@style/WalletTheme.TextViewDebit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:text="@{receipt.debitCurrencyAmount.toString()}"
            app:layout_constraintBaseline_toBaselineOf="@+id/textView_currency_debited"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/textView_currency_debited"
            databind:text="32290.0000" />

        <TextView
            android:id="@+id/textView_credited_amount"
            style="@style/WalletTheme.TextViewCredit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:text="@{receipt.creditCurrencyAmount.toString()}"
            app:layout_constraintBaseline_toBaselineOf="@+id/textView_currency_credited"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/textView_currency_credited"
            databind:text="2" />

        <ImageView
            android:id="@+id/imageView_debited"
            style="@style/WalletTheme.ImageViewDebit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView_transaction_type"/>

        <ImageView
            android:id="@+id/imageView_credited"
            style="@style/WalletTheme.ImageViewCredit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView_debited"/>
    </android.support.constraint.ConstraintLayout>
</layout>