<resources>

    <!-- Base application theme. -->
    <style name="WalletTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="WalletTheme.AppBarLayout" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="WalletTheme.Toolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:background">?attr/colorPrimary</item>
    </style>

    <style name="WalletTheme.ImageViewCredit">
        <item name="android:tint">@color/colorCredit</item>
        <item name="android:src">@drawable/ic_add</item>
        <item name="android:adjustViewBounds">true</item>
    </style>

    <style name="WalletTheme.TextViewCredit">
        <item name="android:textColor">@color/colorCredit</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="WalletTheme.ImageViewDebit">
        <item name="android:tint">@color/colorDebit</item>
        <item name="android:src">@drawable/ic_remove</item>
        <item name="android:adjustViewBounds">true</item>
    </style>

    <style name="WalletTheme.TextViewDebit">
        <item name="android:textColor">@color/colorDebit</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="WalletTheme.TextViewTransaction">
        <item name="android:textColor">@color/textColorMuted</item>
        <item name="android:textSize">14sp</item>
    </style>

    <!-- Dimens -->
    <dimen name="fab_margin">8dp</dimen>

</resources>
